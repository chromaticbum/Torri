<!DOCTYPE html>
<html>
<head>
  <title>Torri</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults, 'rails.validations', 'rails.validation.custom', 'user.datepicker' %>
  <%= csrf_meta_tag %>
</head>
<body>

<div id="header">
  <div id="header-container">
    <div id="user-form">
      <% unless user_signed_in? %>
        <%= form_for('user', :url => user_session_path) do |f| %>
          <div class="field">
            <%= f.label :email, :for => 'sign_in_email' %>
            <br/>
            <%= f.text_field :email, :id => 'sign_in_email' %>
          </div>

          <div class="field">
            <%= f.label :password, :for => 'sign_in_password' %>
            <br/>
            <%= f.password_field :password, :id => 'sign_in_password' %>
          </div>

          <div class="actions">
            <%= f.submit 'Sign in' %>
          </div>
        <% end %>
      <% end %>
    </div>

    <div id="links">
      <%= link_to('Sign out', destroy_user_session_path) if user_signed_in? %>
      <%= link_to('Edit account details', edit_user_registration_path) if user_signed_in? %>
      <%= link_to('Sign up', new_user_registration_path) unless user_signed_in? %>
      <%= link_to 'States', states_path %>
      <%= link_to 'Cities', cities_path %>
    </div>
  </div>
</div>

<div id="content">
  <div class="notice"><%= notice %></div>

  <div class="alert"><%= alert %></div>

  <%= yield %>
</div>


</body>
</html>
